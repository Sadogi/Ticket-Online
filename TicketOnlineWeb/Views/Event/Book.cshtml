@model TicketOnlineWeb.Models.Forms.BookingForm

@{
    ViewData["Title"] = "Book";
}

<h1>Booking</h1>
<hr />

@if (!(ViewBag.Message is null))
{
<p class="text-danger">@ViewBag.Message</p>
<hr />
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Book">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="UserId" class="form-control" type="hidden" />
            </div>
            <div class="form-group">
                <input asp-for="EventId" class="form-control" type="hidden" />
            </div>
            <div class="form-group">
                <input asp-for="PurchaseDate" class="form-control" type="hidden" />
            </div>
            <div class="form-group">
                <label asp-for="TicketsPurchased" class="control-label">How many tickets do you want ?</label>
                <input asp-for="TicketsPurchased" class="form-control" />
                <span asp-validation-for="TicketsPurchased" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TicketsPrice" class="control-label">Price/Ticket : @Model.TicketsPrice €</label>
                <input asp-for="TicketsPrice" class="form-control" type="hidden" />
            </div>
            <div class="form-group">
                <input asp-for="Amount" class="form-control" type="hidden" />
            </div>
            <div class="form-group">
                <input type="submit" value="Book" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
