@model TicketOnlineWeb.Models.Forms.BookingPayment

@{
    ViewData["Title"] = "Payment";
}

<h1>Payment</h1>
<hr />

@if (!(ViewBag.Message is null))
{
    <p class="text-danger">@ViewBag.Message</p>
    <hr />
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Payment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="UserId" class="form-control" type="hidden" />
            </div>
            <div class="form-group">
                <input asp-for="EventId" class="form-control" type="hidden" />
            </div>
            <div class="form-group">
                <input asp-for="PurchaseDate" class="form-control" type="hidden" />
            </div>
            <div class="form-group">
                <label asp-for="TicketsPurchased" class="control-label">Tickets Purchased : @Model.TicketsPurchased</label>
                <input asp-for="TicketsPurchased" class="form-control" type="hidden" />
            </div>
            <div class="form-group">
                <label asp-for="TicketsPrice" class="control-label">Price/Ticket : @Model.TicketsPrice €</label>
                <input asp-for="TicketsPrice" class="form-control" type="hidden" />
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label">Total amount : @Model.Amount €</label>
                <input asp-for="Amount" class="form-control" type="hidden" />
            </div>
            <div class="form-group">
                <label asp-for="CardHolder" class="control-label">Card Holder</label>
                <input asp-for="CardHolder" class="form-control" />
                <span asp-validation-for="CardHolder" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CardNumber" class="control-label">Card Number</label>
                <input asp-for="CardNumber" class="form-control" />
                <span asp-validation-for="CardNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExpirationDate" class="control-label">Expiration Date</label>
                <input asp-for="ExpirationDate" class="form-control" value="@DateTime.Now" />
                <span asp-validation-for="ExpirationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CVVnumber" class="control-label">Code</label>
                <input asp-for="CVVnumber" class="form-control" type="password" />
                <span asp-validation-for="CVVnumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Book" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}